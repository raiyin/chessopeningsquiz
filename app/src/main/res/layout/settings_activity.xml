<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.ChessOpeningsQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/quiz_count"
            android:textColor="#BCAAA4" />

        <SeekBar
            android:id="@+id/sb_quizCount"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:max="10"
            android:progress="3"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/piece_speed"
            android:textColor="#BCAAA4" />

        <SeekBar
            android:id="@+id/sb_pieceSpeed"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:max="10"
            android:progress="4" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sc_darkTheme"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:text="@string/set_dark_theme"
        android:fontFamily="@font/roboto"
        android:textColor="#BCAAA4" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sc_nextMoveNow"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="10sp"
        android:text="@string/next_task_now"
        android:fontFamily="@font/roboto"
        android:textColor="#BCAAA4" />

</LinearLayout>